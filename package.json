{
  "name": "template-webpack-typescript",
  "version": "1.0.0",
  "description": "Template for webpack and typescript",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --open --port 3000 --config webpack.dev.js",
    "build": "npx webpack --config webpack.build.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sync": "browser-sync start --server --files \"*.html, css/*.css, public/*.html, js/*.js\"",
    "dev": "concurrently --kill-others \"npm run sync\" \"npm run start\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/biaoyansu/template-webpack-typescript"
  },
